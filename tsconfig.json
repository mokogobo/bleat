{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "outDir": "./build/"
    },
    "filesGlob": [
        "./*.tsx",
        "./**/*.tsx",
        "!./node_modules/**/*.tsx"
    ],
    "files": [
        "./app/components/App.tsx",
        "./app/components/Composer.tsx",
        "./app/components/Messages.tsx",
        "./app/main.tsx",
        "./app/stores/AppStore.tsx"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
